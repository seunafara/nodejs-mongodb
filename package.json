{
  "name": "predeet-beta",
  "version": "1.0.0",
  "description": "Quick starter boilerplate for NodeJS apps using MongoDB",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "build": "yarn audit fix --force & tsc --build",
    "dev": "nodemon --exec ts-node index.ts",
    "dev:prod": "nodemon dist/index.js",
    "start": "ts-node index.ts",
    "start:prod": "node dist/index.js"
  },
  "keywords": [
    "NodeJS",
    "MongoDB",
    "mongoose",
    "typescript",
    "javascript",
    "boilerplate"
